{
  "name": "coding-buddy",
  "productName": "CodingBuddyOffline",
  "version": "1.0.0",
  "description": "Coding Buddy Offline Electron App",
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "react-start": "react-scripts start",
    "prepackage": "npm run build",
    "package": "electron-builder build --c.extraMetadata.main=build/main.js",
    "build": "react-scripts build",
    "electron": "electron ."
  },
  "build": {
    "appId": "de.thm.mni.coding-buddy-offline",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "./src/java/",
        "to": "java",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "keywords": [],
  "author": {
    "name": "un0btanium",
    "email": "unobtaniumlol@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "electron_app"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-regular-svg-icons": "^5.14.0",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "@matejmazur/react-katex": "^3.1.3",
    "axios": "^0.18.1",
    "bootstrap": "^4.5.2",
    "dotenv": "^7.0.0",
    "downloadjs": "^1.4.7",
    "electron-is-dev": "^1.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "immutability-helper": "^3.1.1",
    "jwt-decode": "^2.2.0",
    "katex": "^0.11.1",
    "lz-string": "^1.4.4",
    "nedb": "^1.8.0",
    "node-sass": "^4.14.1",
    "react": "^16.13.1",
    "react-ace": "^6.4.0",
    "react-bootstrap": "^1.3.0",
    "react-compound-slider": "^2.5.0",
    "react-dom": "^16.13.1",
    "react-iframe": "^1.8.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.8",
    "react-toastify": "^5.5.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.53",
    "@electron-forge/maker-deb": "^6.0.0-beta.53",
    "@electron-forge/maker-rpm": "^6.0.0-beta.53",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.53",
    "@electron-forge/maker-zip": "^6.0.0-beta.53",
    "concurrently": "^4.1.2",
    "electron": "9.4.0",
    "electron-builder": "^21.2.0",
    "foreman": "^3.0.1",
    "wait-on": "^3.3.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
